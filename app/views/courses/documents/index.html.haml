.container
  .page-header 
    %h1
      =link_to "←", courses_year_matters_path(@year)
      =link_to "Cours", courses_year_index_path
      ="/"
      =link_to @year, courses_year_matters_path(@year)
      ="/"
      =@matter.name
  .row
    = link_to "Ajouter un document", new_courses_year_matter_document_path(@year, @matter.name), class: "btn btn-info"
    - if current_user.is_admin?
      = link_to "Supprimer la matière", courses_year_matter_path(@year, @matter), method: :delete, class: "btn btn-mini btn-danger", confirm: "Cela supprimera tous les documents associés\nÊtes-vous certain ?"

  .row
    - if @documents.empty?
      %p Il n'y a pas de document pour cette matière
    - else
      %table.table.table-striped
        %thead
          %tr
            %th Nom 
            %th Propriétaire
            %th Type
            %th Date de publication
            - if current_user.is_admin?
              %th Action
        %tbody
          - @documents.each do |d|
            %tr
              %td
                = link_to d.name, d.file.url
              %td=d.author.username
              %td=d.type
              %td=d.release_date 
              - if current_user.is_admin?
                %td
                  =link_to "Supprimer", courses_year_matter_document_path(@year, @matter.name, d), method: :delete, confirm: "Certain ?", class: "btn btn-mini btn-danger"

