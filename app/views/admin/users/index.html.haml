- if @promotion
  %h1= @promotion.name
- else
  %h1 Liste des utilisateurs

%table.table
  %thead
    %tr
      %th username
      %th nom
      %th email
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.username, admin_user_path(user)
        %td= user.name
        %td= link_to user.email, "mailto:#{user.email}"
        %td
          - unless user.confirmed?
            %span.label en attente
        %td
          = link_to edit_admin_user_path(user), class: 'btn btn-small btn-info' do
            %i.icon-edit
            modifier
